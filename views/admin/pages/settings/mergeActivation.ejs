<%- include('../../partials/header'); %>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">



                <div class="card">
                    <div class="card-body">


                        <form id="settings">
                            

                            <div class="form-group">
                                <label for="type">Merging Type</label>
                                
                                <select required id="type" class="custom-select custom-select-sm form-control form-control-sm">
                                    <option value="">Select Type</option>
                                    
                                    <%if(websiteDetails.website_merging === "auto"){%>

                                    <option selected value="auto">Auto Merging</option>

                                    <option value="manual">Manual Merging</option>
                                    <%}else{%>
                                    <option selected  value="manual">Manual Merging</option>

                                    <option value="auto">Auto Merging</option>
                                    

                                    <%}%>
                                    
                                
                                </select>

                            </div>

                            <div class="form-group pt-5">
                                <label for="account">Activation Fee Account Details</label>
                                <textarea id="summernote" name="editordata" class="form-control" rows="3"
                                    spellcheck="true"> <%-websiteDetails.website_activation_fee_bank_account%></textarea>

                                    <small id="account" class="form-text text-muted">The Account Details Investors Will Pay Activation Fee Into.</small>

                            </div>


                            




                            <button type="submit" id="submit-btn" class="btn btn-primary waves-effect waves-light">Save
                                Setting!</button>
                        </form>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->




            </div><!-- end col-->
        </div>
    </div>

    <script src="/js/admin/settings/merge-activation.js"></script>
    <%- include('../../partials/footer'); %>