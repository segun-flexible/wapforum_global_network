<div class="modal fade" id="exampleModal-<%=pk.plan_id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <strong class="modal-title" id="exampleModalLabel">Edit <%=pk.plan_name %></strong>
                <a href="javascript:void(0)" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </a>
            </div>
            <form id="editPlan" data-id="<%=pk.plan_id %>">

                <div class="modal-body">

                    <div class="form-group">
                        <label for="title">Plan Title</label>
                        <input type="text" class="form-control" id="title" value="<%=pk.plan_name %>" required>
                        
                    
                    </div>
                   
                    
                    <div class="form-group">
                        <label for="price">Plan Price</label>
                        <input type="number" class="form-control" id="price" value="<%=pk.plan_price %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="activation">Plan Activation Fee</label>
                        <input type="number" class="form-control" id="activation" value="<%=pk.plan_activation_fee %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="roi">Plan ROI (%)</label>
                        <input type="number" class="form-control" id="roi" value="<%=pk.plan_roi %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="referral">Plan Referral Bonus (%)</label>
                        <input type="number" class="form-control" id="referral" value="<%=pk.plan_referral %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="duration">Plan Duration (Days) </label>
                        <input type="number" class="form-control" id="duration" value="<%=pk.plan_duration %>" required>
                    </div>
                        
                

                    <div class="form-group">
                        <label for="visible">Package Visibility</label><br>
                        <div class="switch-button switch-button-yesno">
                            <input type="checkbox" <%=pk.plan_visibility && 'checked'%> name="<%=pk.plan_id%>" id="<%=pk.plan_id%>"><span>
                                <label for="<%=pk.plan_id%>"></label></span>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="button" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>