<%- include('../../partials/header'); %>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">



                <div class="card">
                    <div class="card-body">


                        <form id="editPage">
                        
                            <div class="modal-body">
                        
                                <div class="form-group">
                                    <label for="title">Page Title</label>
                                    <input type="text" class="form-control" id="title" value="<%=pg.page_title %>" required>
                        
                        
                                </div>
                        
                                <div class="form-group">
                                    <label for="slug">Page Slug</label>
                                    <div style="display: flex;">
                                        <input type="text" class="form-control" id="slug" aria-describedby="slug" required
                                            value="<%=pg.page_slug %>">
                                    </div>
                                </div>
                        
                        
                                <div class="form-group">
                                    <label for="desc">Page Description</label>
                                    <textarea class="form-control" id="summernote" rows="10"><%-pg.page_description %></textarea>
                        
                        
                                </div>
                        
                                <div class="form-group">
                                    <label for="check-<%=pg.page_id%>">Page Visibility</label><br>
                                    <%if(pg.page_status){%>
                                    <div class="switch-button switch-button-yesno">
                                        <input checked="" type="checkbox" name="checkme" id="checkme"><span>
                                            <label for="checkme"></label></span>
                                    </div>
                                    <%}else{%>
                                    <div class="switch-button switch-button-yesno">
                                        <input type="checkbox" name="checkme" id="checkme"><span>
                                            <label for="checkme"></label></span>
                                    </div>
                                    <%}%>
                                </div>
                        
                                <input type="number" hidden id="id" value="<%=pg.page_id%>">
                        
                        
                        
                        
                        
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" id="button" class="btn btn-primary">Save Changes</button>
                            </div>
                        </form>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->




            </div><!-- end col-->
        </div>
    </div>

    <script src="/js/admin/pages/editPage.js"></script>
    <%- include('../../partials/footer'); %>