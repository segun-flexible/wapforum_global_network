<%- include('../../partials/header'); %>




    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->


        <div class="row">
            
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    


                    <div class="card-body p-0">
                        <%if(history.length> 0){ %>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0">#</th>
                                            <th class="border-0">Avatar</th>
                                            <th class="border-0">Username</th>
                                            
                                            <th class="border-0">Plan Name</th>
                                            <th class="border-0">Price</th>
                                            <th class="border-0">Days Left</th>
                                            
        
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%history.map((ht,index)=>{ %>
                                            <tr>
                                                <td>
                                                    <%=index + 1 %>
                                                </td>
                                                
                                                <td>
                                                    <span><img class="methods" src="<%=ht.avatar ? ht.avatar : '/img/avatar.jpg'%>" alt=""></span>
                                                </td>
        
                                                
                                                
                                                
                                                <td style="text-transform: capitalize;">
                                                    <%=ht.username %>
                                                </td>

                                                <td style="text-transform: capitalize;">
                                                    <%=ht.r_plan_name%>
                                                </td>

                                                <td>
                                                    <%=websiteDetails.website_currency%><%=ht.r_plan_price.toLocaleString() %>
                                                </td>
                                                
                                                <td>
                                                    <%=ht.r_duration%> <%=ht.r_duration > 1 ? ' Days Left' : ' Day Left'%>
                                                </td>
                                                

                                                

                                                

                                                
                                            </tr>

                                            

                                            <%})%>

                                            
                                                <tr>
                                                    <td colspan="9"></td>
                                                </tr>
                                    </tbody>
        
                                </table>
        
                                <%-include("../../partials/pagination")%>
        
                            </div>
                            <% }else{%>
                                <h3 class="text-center pt-3">No Active Investment History At The Moment</h3>
                                <%}%>
                    </div>
                </div>
            </div>
        </div>



        
    </div>

<%-include('../../partials/footer'); %>