<%- include('../../partials/header'); %>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>



    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">



                <div class="card">
                    <div class="card-body">

                        

                        <%if(!notice){%>
                        <form id="new">
                            <div class="form-group">
                                <label for="title">Notice Title</label>
                                <input type="text" class="form-control" id="title">
                        
                            </div>
                        
                            <div class="form-group">
                                <label for="desc">Notice Description</label>
                                <textarea class="form-control" id="summernote" rows="3"></textarea>
                        
                            </div>
                            
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Create Notice!</button>
                        </form>
                        <%}else{%>
                        <form id="edit">
                            <div class="form-group">
                                <label for="title">Notice Title</label>
                                <input type="text" class="form-control" id="title" value="<%=notice.notice_title%>">
                        
                            </div>
                        
                            <div class="form-group">
                                <label for="desc">Notice Description</label>
                                <textarea class="form-control" id="summernote" rows="3"><%=notice.notice_body%></textarea>
                        
                            </div>
                            <br>
                            <div class="form-group">
                                <label for="visible">Notice Visibility</label><br>
                                <div class="switch-button switch-button-yesno">
                                    <input type="checkbox" <%=notice.notice_status? 'checked' :''%> name="Visibility" id="Visibility"><span>
                                        <label for="Visibility"></label></span>
                                </div>
                            </div>
                            <br>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Pin Notice!</button>
                        </form>
                        <%}%>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->




            </div><!-- end col-->
        </div>
    </div>

    <script src="/js/admin/notice/notice.js"></script>
    <%- include('../../partials/footer'); %>

