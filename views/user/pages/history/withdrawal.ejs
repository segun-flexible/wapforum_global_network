<%-include("../../partials/header")%>

<div class="col-12 mb-5">
    <div class="card">
        <div class="card-header pb-0">
            <div class="row">
                <div class="col-12">
                    <h6>Withdrawal History</h6>
                </div>
            </div>
        </div>
        <div class="card-body px-0 pb-2">

            <%if(history.length){%>
                <div class="table-responsive">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    #ID</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Amount</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Status</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Date</th>
                                

                            </tr>
                        </thead>
                        <tbody>

                            <%history.map(w=>{%>
                                <tr>
                                    <td class="align-middle text-left text-sm p-4">
                                        <span class="text-xs font-weight-bold">
                                            <%=w.w_trx_id%>
                                        </span>
                                    </td>

                                    
                                    <td class="align-middle text-left text-sm p-4">
                                        <span class="text-xs font-weight-bold">
                                            <%=websiteDetails.website_currency + w.w_amount.toLocaleString()%>
                                        </span>
                                    </td>

                                    
                                    <td class="align-middle text-left text-sm p-4">
                                        <%if(w.w_status){%>
                                            <button type="button"
                                                class="btn bg-gradient-success btn-sm mb-0">Completed</button>
                                            <%}else{%>
                                                <button type="button"
                                                    class="btn bg-gradient-danger btn-sm mb-0">Pending</button>
                                        <%}%>
                                    </td>

                                    <td class="align-middle text-left text-sm p-4">
                                        <span class="text-xs font-weight-bold">
                                            <%=w.w_created_at%>
                                        </span>
                                    </td>


                                </tr>

                                <%})%>

                        </tbody>

                    </table>

                    <div class="d-flex justify-content-center">
                        <%if(history.length){%>
                    <%-include("../../partials/pagination");%>
                    <%}%>

                    </div>

                </div>
                <%}else{%>
                    <h6 class="text-center pt-3">No Withdrawal Stats At The Moment</h6>
                    <%}%>


        </div>
    </div>
</div>


<%-include("../../partials/footer")%>