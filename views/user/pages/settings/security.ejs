<%-include("../../partials/header")%>


<div class="container-fluid mt--6">

    <div class="row">

        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="mb-3 header-title">Password</h4>
        
                    <form id="security">
        
                        <div class="form-group">
                            <label for="old">Old Password</label>
                            <input required type="text" placeholder="Old Password" class="form-control" id="old">
                        </div>
        
                        <div class="form-group">
                            <label for="password">New Password</label>
                            <input required type="password" placeholder="New Password" class="form-control" id="password">
                        </div>
        
                        <div class="form-group">
                            <label for="password2">Confirm New Password</label>
                            <input required placeholder="Confirm New Password" type="password" class="form-control" id="password2">
                        </div>
        
                        
        
                        <button type="submit" class="btn btn-primary waves-effect waves-light">Change Password</button>
                    </form>
        
                </div> <!-- end card-body-->
            </div> <!-- end card-->
        </div>
        
     

    </div>


<script src="/js/user/settings/security.js"></script>

<script src="/js/partials/fetcher.js"></script>
<script src="/js/partials/sweetalert.js"></script>

<%-include("../../partials/footer")%>
