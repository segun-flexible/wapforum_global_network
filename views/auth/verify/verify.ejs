<%-include("../partials/header")%>

    <section class="min-vh-100 mb-8">
        <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg"
            style="background-image: url('/img/user/curved-images/curved8.jpg');">
            <span class="mask bg-gradient-dark opacity-6"></span>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5 text-center mx-auto">
                        <h1 class="text-white mb-2 mt-5">Verify Your Account!</h1>
                        <p class="text-lead text-white">Hi <span style="text-transform: capitalize;"><%=user.username%></span>, Kindly Verify Your Account</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row mt-lg-n10 mt-md-n11 mt-n10">
                <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                    <div class="card z-index-0">
                        <div class="card-header text-center pt-4">
                            <h5>Verification Required</h5>
                        </div>

                        <div class="card-body">
                            <div class="text-center mb-4"><small style="font-weight: bold;">We've Sent A Verification Mail To Your Email, Please
                                    Check Your Mail To Verify Your Account.</small></div>

                            <form id="resend" role="form text-left">

                                <div class="text-center"><button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Resend Verification Mail</button></div>
                                
                                <div class="text-center mb-4"><small style="font-weight: bold;">If You Didn't Recieve The Mail, Click The Above
                                        Button Once.</small></div>


                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/js/auth/verify.js"></script>
    <script src="/js/partials/sweetalert.js"></script>
    <script src="/js/partials/fetcher.js"></script>

    <%-include("../partials/footer")%>