<%-include("./partials/header")%>
    
    <section class="min-vh-100 mb-8">
        <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg"
            style="background-image: url('/img/user/curved-images/curved0.jpg');">
            <span class="mask bg-gradient-dark opacity-6"></span>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5 text-center mx-auto">
                        <h1 class="text-white mb-2 mt-5">Welcome Back!</h1>
                        <p class="text-lead text-white">Sign in with your valid credentials.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row mt-lg-n10 mt-md-n11 mt-n10">
                <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                    <div class="card z-index-0">
                        <div class="card-header text-center pt-4">
                            <h5>Login</h5>
                        </div>
                        
                        <div class="card-body">
                            <form id="login" role="form text-left">

                                <div class="mb-3">
                                    <input type="text" class="form-control" placeholder="Username Or Email" id="credentials" required>
                                </div>
                                

                                <div class="mb-3">
                                    <input type="password" maxlength="16" class="form-control" placeholder="Password" id="password" required>
                                </div>
                                

                                <div class="text-center">
                                    <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Login in</button>
                                </div>

                                <p class="text-sm mt-3 mb-0">Not a member? <a href="/register" class="text-dark font-weight-bolder">Sign up</a></p>
                                <p class="text-sm mt-3 mb-0">Forgotten password? <a href="/forgot-password" class="text-dark font-weight-bolder">Reset password</a></p>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

<script src="/js/auth/login.js"></script>
<script src="/js/partials/sweetalert.js"></script>
<script src="/js/partials/fetcher.js"></script>

<%-include("./partials/footer")%>